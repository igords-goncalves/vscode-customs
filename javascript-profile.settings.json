{
  // Acessibility
  "accessibility.underlineLinks": true,
  // Better comments
  "better-comments.highlightPlainText": true,
  // Code runner
  "code-runner.executorMap": {
    "javascript": "node",
    "less": "cd $dir && lessc $fileName $fileNameWithoutExt.css",
    "powershell": "powershell -ExecutionPolicy ByPass -File",
    "sass": "sass --style expanded",
    "scss": "scss --style expanded",
    "shellscript": "bash",
    "typescript": "ts-node"
  },
  "console-ninja.featureSet": "Community",
  // Dotenv
  "dotenv.enableAutocloaking": false,
  // Editor
  "diffEditor.renderSideBySide": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "editor.tabSize": 2,
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontSize": 13.5,
  "editor.guides.bracketPairs": "active",
  "editor.guides.indentation": true,
  "editor.guides.highlightActiveBracketPair": false,
  "editor.largeFileOptimizations": false,
  "editor.minimap.enabled": false,
  "editor.lineHeight": 21,
  "editor.renderLineHighlight": "gutter",
  "editor.renderWhitespace": "none",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.semanticHighlighting.enabled": "configuredByTheme",
  "editor.linkedEditing": true,
  "editor.stickyScroll.enabled": false,
  "editor.smoothScrolling": true,
  // Error lens
  "errorLens.gutterIconsEnabled": false,
  // Explorer
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "tsconfig.json": "tsconfig.*.json, .prettierrc, eslint.config*",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock"
  },
  "explorer.decorations.colors": false,
  "explorer.confirmPasteNative": false,
  // Files
  "files.associations": {
    "*.dbclient-js": "javascript",
    "*.sqlbook": "sql",
    "*.ndjson": "jsonl",
    "*.ejs": "html",
    "*.excalidraw": "json",
    "*.excalidrawlib": "json",
    ".env*": "dotenv"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": false,
    "**/node_modules": false
  },
  // Git, GitHub, Gitlens, Copilot
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "gitlens.ai.model": "gitkraken",
  "gitlens.ai.vscode.model": "copilot:claude-3.5-sonnet",
  "gitlens.ai.gitkraken.model": "gemini:gemini-2.0-flash",
  "github.copilot.advanced": {
    "promptDirectory": ".github/prompts"
  },
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.reviewSelection.enabled": true,
  "chat.promptFiles": true,
  "chat.promptFilesLocations": {
    ".github/prompts": true
  },
  "chat.editor.fontSize": 10,
  "git.ignoreRebaseWarning": true,
  "git.openRepositoryInParentFolders": "never",
  "githubPullRequests.createOnPublishBranch": "never",
  "githubPullRequests.pullBranch": "never",
  "gitlens.graph.layout": "editor",
  "gitlens.graph.minimap.additionalTypes": [
    "localBranches",
    "stashes",
    "remoteBranches",
    "tags"
  ],
  // JavaScript and Typescript
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.referencesCodeLens.showOnAllFunctions": false,
  "javascript.referencesCodeLens.enabled": false,
  "typescript.referencesCodeLens.showOnAllFunctions": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  // Live server
  "liveServer.settings.CustomBrowser": "microsoft-edge",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,

  // Symbols
  "symbols.files.associations": {
    "*.module.ts": "nest",
    "*.controller.ts": "nest-controller",
    "*.decorator.ts": "nest-decorator",
    "*.guard.ts": "nest-guard",
    "*.middleware.ts": "nest-middleware",
    "*.service.ts": "nest-service",
    "*.tldr": "brackets-gray",
    "TODO": "text",
    "*.todo": "text",
    "*.sample": "gear"
  },
  "symbols.folders.associations": {
    "requests": "folder-target"
  },

  // Terminal
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.env.windows": {},
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.env.linux": {},
  "terminal.integrated.cursorStyleInactive": "block",
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.tabs.location": "left",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Windows PowerShell": {
      "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
    }
  },
  "todo.timer.statusbar.alignment": "right",
  "todo.statistics.statusbar.alignment": "right",
  "workbench.startupEditor": "none",
  "workbench.tree.enableStickyScroll": false,
  "workbench.activityBar.location": "hidden",
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.panel.showLabels": false,
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.tabSizing": "fixed",
  "workbench.editor.tabSizingFixedMaxWidth": 120,
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.editor.enablePreview": false,
  "workbench.iconTheme": "symbols",
  "workbench.colorTheme": "Moonerized Dark",
  "workbench.layoutControl.enabled": false,

  // Misc
  "window.density.editorTabHeight": "default",
  "window.menuBarVisibility": "compact",
  "window.title": " ",
  "window.commandCenter": false,
  "window.newWindowProfile": "Default",
  "diffEditor.ignoreTrimWhitespace": false,
  "database-client.autoSync": true,
  "mdb.confirmRunAll": false,
  "docker.extension.dockerEngineAvailabilityPrompt": false,

  //~~> Styles colors and theming
  "todo.statistics.statusbar.color": "#97d3ff",
  "todo.timer.statusbar.color": "#97d3ff",
  "workbench.colorCustomizations": {
    "errorLens.errorForeground": "#f00000",
    "errorLens.warningForeground": "#ffd86c",
    "tab.activeBorder": "#192330",
    "breadcrumb.background": "#192330"
  },
  // Better comments
  "better-comments.tags": [
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#FF2D00",
      "italic": false,
      "strikethrough": false,
      "tag": "!",
      "underline": false
    },
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#3498DB",
      "italic": false,
      "strikethrough": false,
      "tag": "?",
      "underline": false
    },
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#178728",
      "italic": false,
      "strikethrough": false,
      "tag": "//",
      "underline": false
    },
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#ffff00",
      "italic": false,
      "strikethrough": false,
      "tag": "/#",
      "underline": false
    },
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#FF8C00",
      "italic": false,
      "strikethrough": false,
      "tag": "%",
      "underline": false
    },
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#22e081",
      "italic": false,
      "strikethrough": false,
      "tag": "*",
      "underline": false
    },
    {
      "backgroundColor": "#00b89f",
      "bold": false,
      "color": "#000",
      "italic": false,
      "strikethrough": false,
      "tag": "~~>",
      "underline": false
    },
    {
      "backgroundColor": "#ffff00",
      "bold": false,
      "color": "#000",
      "italic": false,
      "strikethrough": false,
      "tag": "~~#",
      "underline": false
    },
    {
      "backgroundColor": "#DD1F13",
      "bold": false,
      "color": "#fff",
      "italic": false,
      "strikethrough": false,
      "tag": "~~*",
      "underline": false
    },
    {
      "backgroundColor": "#ff0000",
      "bold": false,
      "color": "#000",
      "italic": false,
      "strikethrough": false,
      "tag": "~~!",
      "underline": false
    }
  ],
  // Dark and Light
  "editor.tokenColorCustomizations": {
    "[*Light*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#000"
          }
        }
      ]
    },
    "[*Dark*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#fff"
          }
        }
      ]
    },
    "textMateRules": []
  },
  "workbench.statusBar.visible": false
}
